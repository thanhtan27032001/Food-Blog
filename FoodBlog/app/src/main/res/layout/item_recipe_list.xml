<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgRecipeList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_beefsteak"
            android:scaleType="centerCrop"
            android:foreground="@drawable/background_recipe_preview_cover"/>

        <TextView
            android:id="@+id/tvRecipeListName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:gravity="bottom|start"
            android:text="Món bò"
            android:textSize="26sp"
            android:textColor="@color/white"/>

        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="end"
            android:padding="4dp"
            android:src="@drawable/baseline_more_vert_24"
            app:tint="@color/white"
            android:background="@drawable/background_ripple_oval"
            android:backgroundTint="#40000000"/>
    </FrameLayout>

</androidx.cardview.widget.CardView>